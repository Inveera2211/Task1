
<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="container">
      <div class="col-xs-6 col-md-6" 
       style="background-color: white;
         box-shadow: inset 1px -1px 1px #994, inset -1px 1px 5px #994;">

<%= form_for(resource, as: resource_name, url: users_registrations_update_path, html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

 

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <!-- <div class="field">
    <%= f.label :new_password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :new_password, autocomplete: "off" %>
  </div>

  

  <div class="field">
    <%= f.label :password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div> -->
<br>
  <div class="actions" >
   &nbsp;&nbsp;&nbsp; <%= f.submit "Update" , class:"btn btn-primary"%>
      </div>
<div class="form-group">
        <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
            <%= f.file_field :avatar %>
        </div>
    </div>
  <%= link_to "Change your password" , users_registrations_newpass_path%>


<% end %>

<h6>Cancel my account</h6>

<p>Unhappy? <%= button_to "Cancel my account",registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
