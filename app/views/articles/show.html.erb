<div class="container">
	<div class="row">
		<div class="col-xs-3 "></div>
		<div class="col-xs-6 ">


			<table class="table table-bordered">
				<caption><strong>Article</strong></caption>
				<tr><td>
					<center><strong>Title: <%= @article.title %></strong></center>
				</td>	
			</tr>
			<tr><td>			
				<strong>Text:</strong>


				<%= @article.text %>
			</td>

		</tr>
	</table>

</div>		
<div class="col-xs-3"></div>

</div>



<br><br><br>

<div class="row">
	<div class="col-xs-4">


		<h2>Add a comment:</h2>
		<%= form_for([@article, @article.comments.build]) do |f| %>
		<p>
			<%= f.label :commenter %><br>
			<%= f.text_field :commenter %>
		</p>
		<p>
			<%= f.label :text %><br>
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit "CreateComment", class:"btn btn-primary"%>
		</p>
		<% end %>

		<%= link_to 'Back', articles_path %> |

		<%= link_to 'Edit', edit_article_path(@article) %>


	</div>
	<div class="col-xs-6">
		

    <h4>Comments</h4></caption>
     <table class="table table-bordered">
	<tr><th><strong>Commenter:</strong></th>
		<th><strong>Comment:</strong></th>
		</tr>		

		<%@article.comments.each do |comment| %>

		<tr><td>
			<%= comment.commenter %>
		    </td>
		    <td>
			<p>	
				<%= comment.body %>
			</p>
			<% if can? :delete, comment%>
		<%=link_to  'Destroy' ,[comment.article, comment],method: :delete,data: {confirm: 'Are you sure?'} %>
		<%end%>
		</td>
	</tr>

	<%end%>
</table>
</div>

	<div class="col-xs-2"></div>
	

</div>






</div>

